<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaLadraoActivity"
    android:padding="5dp"
    android:background="@color/vermelho">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ladraovenceu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vocês são culpados pela destruição do Pais, Fome e Miséria esta por vir!"
            android:textAlignment="center"
            android:textColor="@color/vermelho"
            android:textSize="25dp" />


    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/ladrao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/vermelho"
        android:text="Vencedor Ladrão "/>


</FrameLayout>